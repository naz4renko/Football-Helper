<UserControl x:Class="FootballHelper.WPF.View.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FootballHelper.WPF.View"
             mc:Ignorable="d" 
            d:DesignHeight="540" d:DesignWidth="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.RowSpan="2">
            
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Имя: "
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       Foreground="Black"/>

                <TextBox Text="{Binding Name}"
                     Height="30"
                     Width="200"
                     FontSize="14"
                     FontFamily="Arial"
                     FontWeight="Bold"
                     Margin="127,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Национальность: "
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       Foreground="Black"/>

                <TextBox Text="{Binding Nationality}"
                     Height="30"
                     Width="200"
                     FontSize="14"
                     FontFamily="Arial"
                     FontWeight="Bold"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Позиция: "
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       Foreground="Black"/>

                <TextBox Text="{Binding Position}"
                     Height="30"
                     Width="200"
                     FontSize="14"
                     FontFamily="Arial"
                     FontWeight="Bold"
                     Margin="83,0,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="Дата рождения: "
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       Foreground="Black"/>

                <TextBox Text="{Binding Birth, Mode=OneWay}"
                     Height="30"
                     Width="200"
                     FontSize="14"
                     FontFamily="Arial"
                     FontWeight="Bold"
                     Margin="20,0,0,0"
                     IsReadOnly="True"/>
            </StackPanel>

            <Button Content="Назад"
                Command="{Binding ToClub}"
                Height="50"
                Width="200"
                Margin="10"
                FontFamily="Arial"
                FontSize="18"
                FontWeight="Bold"
                Background="Transparent"
                Foreground="Black"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1">
            
            <TextBlock Text="Суммарная статистика"
                       FontSize="20"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       Foreground="Black"/>
            
            <TextBlock Text="{Binding TotalStats}" 
                   HorizontalAlignment="Center"
                   FontSize="16"
                   FontFamily="Arial"
                   FontWeight="Bold"
                   Foreground="Black"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1">
            
            <TextBlock Text="Средняя статистика"
                       FontSize="20"
                       FontFamily="Arial"
                       FontWeight="Bold"
                       Foreground="Black"/>

            <TextBlock Text="{Binding AverageStats}" 
                   Grid.Column="1" 
                   Grid.Row="1" 
                   HorizontalAlignment="Center"
                   FontSize="16"
                   FontFamily="Arial"
                   FontWeight="Bold"
                   Foreground="Black"/>
        </StackPanel>


    </Grid>
</UserControl>
